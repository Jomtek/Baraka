<UserControl x:Class="Baraka.Views.UserControls.Displayers.TextDisplayer.BookmarkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baraka.Views.UserControls.Displayers.TextDisplayer"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="60">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="NormalMode_Fill_Brush" Color="#038B4B" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="18" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,12" Grid.RowSpan="2">
            <Path x:Name="TopPath" Data="M 70,30 L 70,10 L 40,10 L 40,30" StrokeThickness="6" Stretch="Fill" Margin="0" Fill="{StaticResource NormalMode_Fill_Brush}">
                <Path.Stroke>
                    <SolidColorBrush Color="{StaticResource DarkColor}"/>
                </Path.Stroke>
            </Path>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Stretch" Margin="0">
            <Path x:Name="DownPath" Data="M 40,10 L 40,30 L 60,10 L 80,30 L 80,10" StrokeThickness="6" Stretch="Fill" Margin="0" Fill="{StaticResource NormalMode_Fill_Brush}" >
                <Path.Stroke>
                    <SolidColorBrush Color="{StaticResource DarkColor}"/>
                </Path.Stroke>
            </Path>
        </Grid>
    </Grid>
</UserControl>

    <UserControl.Resources>
        <!-- Converters -->
        <converters:SelectedQariToBrushConverter x:Key="SelectedQariToBrushConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Hidden" d:Background="White"
                  behaviors:ScrollViewerBehavior.ScrollState="{Binding ScrollState, Mode=TwoWay}"
                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="PreviewMouseWheel">
                <i:InvokeCommandAction Command="{Binding ScrollCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <ItemsControl x:Name="QariIC" ItemsSource="{Binding QariList}" HorizontalAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" Height="190" Width="130" Margin="7 0 7 14"
                            CornerRadius="12">

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                <i:InvokeCommandAction Command="{Binding ElementName=QariIC, Path=DataContext.QariSelectedCommand}"
                                                       CommandParameter="{Binding}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <!-- Natural shadow -->
                        <Border.Effect>
                            <DropShadowEffect Opacity="0.5" Direction="260" ShadowDepth="2" BlurRadius="10" RenderingBias="Quality" />
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <!-- Image     -->
                                <RowDefinition Height="8" />
                                <!-- Margin    -->
                                <RowDefinition Height="4" />
                                <!-- Separator -->
                                <RowDefinition Height="5" />
                                <!-- Margin    -->
                                <RowDefinition Height="*" />
                                <!-- Name      -->
                            </Grid.RowDefinitions>

                            <!-- Image -->
                            <Grid Grid.Row="0" Cursor="Hand">
                                <!--<Grid Width="25" Height="25" Panel.ZIndex="1"
                                      Margin="2" VerticalAlignment="Top" HorizontalAlignment="Right"
                                      Cursor="Hand">
                                    <Path Style="{StaticResource RegularStar}" Fill="Goldenrod" Stroke="White" StrokeThickness="1" Stretch="Fill" />
                                </Grid>-->

                                <Rectangle RadiusY="12" RadiusX="12">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                    </Rectangle.Fill>

                                    <Rectangle.Effect>
                                        <DropShadowEffect Opacity="0" Direction="260" ShadowDepth="5.5" BlurRadius="9" />
                                    </Rectangle.Effect>

                                    <Rectangle.Style>
                                        <Style TargetType="Rectangle">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                             Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                                                                                 To="0.4" Duration="0:0:.12" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>

                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                                                                                 To="0" Duration="0:0:.06" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>

                                                    <!--<Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Opacity="0.35" Direction="260" ShadowDepth="4" BlurRadius="10" />
                                                        </Setter.Value>
                                                    </Setter>-->
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Rectangle.Style>
                                </Rectangle>
                            </Grid>

                            <!-- Separator rectangle -->
                            <Rectangle Grid.Row="2" Margin="20 0 20 0" RadiusX="3" RadiusY="3"
                                       Fill="{Binding Converter={StaticResource SelectedQariToBrushConverter}}" />

                            <!-- Name -->
                            <Grid Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="15" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" HorizontalAlignment="Center" Text="{Binding FirstName}" FontSize="13" />
                                <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="{Binding LastName}"  FontWeight="Bold" FontSize="17" />
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- <Rectangle Fill="Red" Height="20" Width="20" /> -->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
<UserControl x:Class="Baraka.Theme.UserControls.BarakaDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baraka.Theme.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="180">
    <Grid Background="{DynamicResource LightBrush}">
        <Border
            BorderThickness="0"
            CornerRadius="0,20,0,0" Background="{DynamicResource DarkBrush}" BorderBrush="Black"
            />
    </Grid>
</UserControl>

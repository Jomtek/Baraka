<UserControl x:Class="Baraka.Theme.UserControls.Quran.Display.Mushaf.BarakaMushafSurahDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baraka.Theme.UserControls.Quran.Display.Mushaf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="610">
    <DockPanel>
        <Border BorderThickness="7" Width="500" DockPanel.Dock="Top" Height="610">
            <Border.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
            </Border.BorderBrush>
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
        </Border>
    </DockPanel>
</UserControl>

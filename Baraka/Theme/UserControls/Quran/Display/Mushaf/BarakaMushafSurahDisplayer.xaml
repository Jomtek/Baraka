<UserControl x:Class="Baraka.Theme.UserControls.Quran.Display.Mushaf.BarakaMushafSurahDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baraka.Theme.UserControls.Quran.Display.Mushaf"
             xmlns:ui="clr-namespace:Baraka.Utils.UI"
             mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:BarakaMadinaPage x:Name="LeftPage" Grid.Column="0" Width="Auto" Side="LEFT" Margin="0" MouseDoubleClick="LeftPage_MouseDoubleClick"/>
        <local:BarakaMadinaPage x:Name="RightPage" Grid.Column="2" Width="Auto" Side="RIGHT" Margin="0"/>
    </Grid>

</UserControl>

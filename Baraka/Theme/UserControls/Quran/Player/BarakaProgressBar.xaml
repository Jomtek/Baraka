             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baraka.Theme.UserControls"
             mc:Ignorable="d" Height="34.305" Width="345.242" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Rectangle x:Name="BackgroundRect" Fill="#FFDADADA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RadiusY="10" RadiusX="10" />
        <Rectangle x:Name="ProgressRect" Fill="{DynamicResource MediumBrush}" HorizontalAlignment="Left" VerticalAlignment="Stretch" RadiusY="10" RadiusX="10"/>

    </Grid>
</UserControl>

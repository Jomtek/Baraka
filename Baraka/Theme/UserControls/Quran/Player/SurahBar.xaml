<UserControl x:Class="Baraka.Theme.UserControls.Quran.Player.SurahBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baraka.Theme.UserControls.Quran.Player"
             mc:Ignorable="d" Height="52.5" Width="500" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <UserControl.Resources>
        <Style x:Key="PlayPath" TargetType="{x:Type Path}">
            <Setter Property="Data" Value="M424.4 214.7L72.4 6.6C43.8-10.3 0 6.1 0 47.9V464c0 37.5 40.7 60.1 72.4 41.3l352-208c31.4-18.5 31.5-64.1 0-82.6z"/>
        </Style>
        <Style x:Key="DownloadPath" TargetType="{x:Type Path}">
            <Setter Property="Data" Value="M7.262,0h2.69a.8.8,0,0,1,.807.807V6.455h2.949A.671.671,0,0,1,14.181,7.6L9.067,12.719a.651.651,0,0,1-.918,0L3.029,7.6A.671.671,0,0,1,3.5,6.455H6.455V.807A.8.8,0,0,1,7.262,0Zm9.952,12.641v3.766a.8.8,0,0,1-.807.807H.807A.8.8,0,0,1,0,16.407V12.641a.8.8,0,0,1,.807-.807H5.739l1.647,1.647a1.723,1.723,0,0,0,2.441,0l1.647-1.647h4.932A.8.8,0,0,1,17.214,12.641ZM13.045,15.6a.672.672,0,1,0-.672.672A.674.674,0,0,0,13.045,15.6Zm2.152,0a.672.672,0,1,0-.672.672A.674.674,0,0,0,15.2,15.6Z"/>
        </Style>
        <Style x:Key="CloudPath" TargetType="{x:Type Path}">
            <Setter Property="Data" Value="M20.088,9.522a3.591,3.591,0,0,0-3.348-4.88,3.569,3.569,0,0,0-1.992.605A5.979,5.979,0,0,0,3.587,8.229c0,.1,0,.2.007.3A5.382,5.382,0,0,0,5.381,18.99H19.132a4.783,4.783,0,0,0,.957-9.469Z"/>
        </Style>
        <Style x:Key="Info" TargetType="{x:Type Path}">
            <Setter Property="Data" Value="M256 8C119.043 8 8 119.083 8 256c0 136.997 111.043 248 248 248s248-111.003 248-248C504 119.083 392.957 8 256 8zm0 110c23.196 0 42 18.804 42 42s-18.804 42-42 42-42-18.804-42-42 18.804-42 42-42zm56 254c0 6.627-5.373 12-12 12h-88c-6.627 0-12-5.373-12-12v-24c0-6.627 5.373-12 12-12h12v-64h-12c-6.627 0-12-5.373-12-12v-24c0-6.627 5.373-12 12-12h64c6.627 0 12 5.373 12 12v100h12c6.627 0 12 5.373 12 12v24z" />
        </Style>
    </UserControl.Resources>

    <Grid Background="White">

        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="SurahNumberTB" HorizontalAlignment="Left" TextWrapping="Wrap" FontFamily="Roboto" FontWeight="Bold" FontSize="22" VerticalAlignment="Top" Margin="5,8,0,0" Text="1."/>
            <Canvas x:Name="InfoBTN" Width="20" Height="20" Margin="45,11,0,0" VerticalAlignment="Top" ToolTip="test" Cursor="Help" >
                <Path x:Name="InfoPath" Style="{StaticResource Info}" Stretch="Fill" Width="20" Height="20" Fill="#FFBFBFBF" ToolTip="" Margin="0" />
            </Canvas>
            <TextBlock x:Name="SurahNameTB" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="5,12,0,0" FontFamily="Roboto" FontSize="18" VerticalAlignment="Top" TextDecorations="{x:Null}" Text="Al Fatiha" FontWeight="Bold"/>
            <TextBlock x:Name="TranslatedNameTB" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="8,15,0,0" FontFamily="Alef" VerticalAlignment="Top" TextDecorations="{x:Null}" FontSize="16" Foreground="#FF939393" Text="Prologue"/>
        </StackPanel>

        <StackPanel x:Name="PlayControlsSP" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,17.5,0">
            <Canvas x:Name="StreamBTN" Width="28" Height="22" Cursor="Hand" Margin="0,0,12,0" PreviewMouseLeftButtonUp="StreamBTN_PreviewMouseLeftButtonUp">
                <Path x:Name="StreamBtnPath" Style="{StaticResource CloudPath}" Stretch="Fill" Height="22" Width="28" Fill="Black" />
            </Canvas>
            <Canvas x:Name="DownloadBTN" Width="20" Height="22" Cursor="Hand" Margin="0,0,5,0">
                <Path Style="{StaticResource DownloadPath}" Stretch="Fill" Width="20" Height="22" Fill="#B1AEAE" />
            </Canvas>
            <Canvas x:Name="PlayBTN" Width="20" Height="22" Cursor="Hand">
                <Path Style="{StaticResource PlayPath}" Stretch="Fill" Width="20" Height="22" Fill="#B1AEAE" />
            </Canvas>
        </StackPanel>

        <Path x:Name="BottomSplitterPath" Data="M0,50 L500,52.5" Height="2.5" Stretch="Fill" VerticalAlignment="Bottom" StrokeThickness="2.5" Stroke="LightGray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Margin="5,0"/>
        <TextBlock x:Name="LoadingTB" HorizontalAlignment="Right" TextWrapping="Wrap" Text="chargement..." VerticalAlignment="Center" Margin="0,0,30,0" FontSize="14" FontStyle="Italic" Foreground="#FF727272" FontFamily="/Baraka;component/Fonts/#Poppins" Visibility="Hidden"/>
    </Grid>
</UserControl>

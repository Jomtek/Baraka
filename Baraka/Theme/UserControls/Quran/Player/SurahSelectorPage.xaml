<Page x:Class="Baraka.Theme.UserControls.Quran.Player.SurahSelectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Baraka.Theme.UserControls.Quran.Player"
      mc:Ignorable="d" 
      d:DesignHeight="440" d:DesignWidth="685"
      Title="SurahSelectorPage" Background="White">

    <DockPanel Margin="0">
        <Border Height="440" VerticalAlignment="Top" Width="175" Margin="0" CornerRadius="0,20,0,0" >
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
            </Border.Background>
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Text="JUZ" HorizontalAlignment="Left" FontSize="20"/>
                <TextBlock TextWrapping="Wrap" Text="HIZB" Margin="0,0,125.71,0" HorizontalAlignment="Left" FontSize="20"/>
                <TextBlock TextWrapping="Wrap" Text="TODO" Margin="0,10,0,0" HorizontalAlignment="Left" FontSize="20"/>
            </StackPanel>
        </Border>
        <ScrollViewer x:Name="PageSV" DockPanel.Dock="Right" VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="ContainerSP" />
        </ScrollViewer>
    </DockPanel>
</Page>

<Application x:Class="Baraka.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Baraka">
    <Application.Resources>
        <ResourceDictionary>
            
            <sys:String x:Key="API_PATH">C:\Users\jomtek360\Documents\Baraka\API</sys:String>
            
            <!-- Basic colors and their brush -->
            <Color x:Key="LightColor">#029550</Color>
            <SolidColorBrush x:Key="LightColorBrush" Color="{StaticResource LightColor}" />

            <Color x:Key="MediumColor">#008145</Color>
            <SolidColorBrush x:Key="MediumColorBrush" Color="{StaticResource MediumColor}" />

            <Color x:Key="DarkColor">#01743E</Color>
            <SolidColorBrush x:Key="DarkColorBrush" Color="{StaticResource DarkColor}" />

            <Color x:Key="GoldColor">#FFC400</Color>
            <SolidColorBrush x:Key="GoldColorBrush" Color="{StaticResource GoldColor}" />

            <!-- Fonts -->
            <FontFamily x:Key="Al_Qalam_Quran">pack://application:,,,/Assets/Fonts/#Al Qalam Quran</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>

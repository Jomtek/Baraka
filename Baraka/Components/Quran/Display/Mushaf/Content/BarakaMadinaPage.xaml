<UserControl x:Class="Baraka.Theme.UserControls.Quran.Display.Mushaf.Content.BarakaMadinaPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:qc="http://QuickConverter.CodePlex.com/"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Baraka.Theme.UserControls.Quran.Display.Mushaf" xmlns:ui="clr-namespace:Baraka.Utils.UI"
             mc:Ignorable="d"
             d:DesignWidth="480" d:DesignHeight="780" SizeChanged="UserControl_SizeChanged" ClipToBounds="True" Width="480" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" LostFocus="UserControl_LostFocus">

    <Grid x:Name="GridComponent">
        <Image x:Name="ImageComponent" Source="/Baraka;component/Images/opening_background.png" Stretch="Fill"/>

        <!-- The annotation Grid is mainly used for adding the sura names in the first two pages -->
        <Grid x:Name="AnnotationHelperGrid">
            <!-- 15 lines -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        </Grid>

        <ScrollViewer x:Name="LinesContainerSV" FocusVisualStyle="{x:Null}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" PreviewMouseWheel="LinesContainerSV_PreviewMouseWheel">
            <Grid x:Name="LinesContainerGrid">
                <!-- 15 lines -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.LayoutTransform>
                    <ScaleTransform x:Name="ScaleTransformer" ScaleX="1" ScaleY="1" />
                </Grid.LayoutTransform>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
